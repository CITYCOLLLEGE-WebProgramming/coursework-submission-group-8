<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recipe Website</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/header.css" rel="stylesheet">
    <link href="/main.css" rel="stylesheet">
    <link href="/footer.css" rel="stylesheet">
    <!-- ICONS -->
    <script src="https://kit.fontawesome.com/fb256de4ec.js" crossorigin="anonymous"></script>
</head>
<body style="overflow: hidden;">

    <!-- Include Header -->
    <%- include('../layout/header.ejs') %>
    
    <div class="container main-content">
        <h2 class="text-center pt-5 pb-4" style="color: white;">Categories</h2>
    
            <!-- Grid Start -->
            <div class="row">
                <% categories.forEach(category => { %>
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title" style="text-align: center;"><%= category.name %></h5>
                                <div style="text-align: center; margin-top: 0.5rem;">
                                    <a href="/categories/<%= category.category_id %>/recipes"><button>View dishes</button></a>    
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
            <!-- Grid End -->

            <!-- Include Footer -->
            <%- include('../layout/footer') %>

        </div>
    </div>
</body>

<!-- Bootstrap JS Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</html>
